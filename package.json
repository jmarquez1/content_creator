{
  "name": "content-creator",
  "version": "1.0.0",
  "private": true,
  "description": "End-to-end content creation operations tool",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
